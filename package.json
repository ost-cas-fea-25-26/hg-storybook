{
  "name": "hg-storybook",
  "version": "0.1.1",
  "type": "module",
  "main": "./dist/index.umd.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:types": "tsc --emitDeclarationOnly --declaration --declarationDir dist",
    "generate": "npx tsx  lib/icon/icons/generateIcons.ts && npx prettier --write  lib/icon/index.tsx",
    "lint": "eslint lib --max-warnings 0",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "format": "prettier --write ."
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js",
      "default": "./dist/index.es.js"
    },
    "./style": "./dist/hg-storybook.css"
  },
  "style": "./dist/hg-storybook.css",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "peerDependencies": {
    "@headlessui/react": "^2.2.9",
    "clsx": "^2.1.1",
    "react": "^19",
    "react-dom": "^19",
    "tailwindcss": "^4"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.1",
    "@eslint/js": "^9.35.0",
    "@semantic-release/changelog": "^6.0.3",
    "@storybook/addon-a11y": "^9.1.7",
    "@storybook/addon-docs": "^9.1.7",
    "@storybook/addon-vitest": "^9.1.7",
    "@storybook/builder-vite": "^9.1.13",
    "@storybook/cli": "^9.1.7",
    "@storybook/react-vite": "^9.1.7",
    "@svgr/cli": "^8.1.0",
    "@tailwindcss/vite": "^4.1.14",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitejs/plugin-react-swc": "^4.1.0",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.35.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-storybook": "^9.1.7",
    "globals": "^16.4.0",
    "jiti": "^2.5.1",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.1.6",
    "playwright": "^1.55.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "semantic-release": "^25.0.1",
    "storybook": "^9.1.7",
    "tailwindcss": "^4.1.14",
    "tsx": "^4.20.6",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.6",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-svgr": "^4.5.0",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "react",
    "components",
    "ui",
    "storybook",
    "tailwind"
  ],
  "description": "A small library of React UI components styled with Tailwind CSS.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ost-cas-fea-25-26/hg-storybook.git"
  },
  "license": "MIT",
  "author": "",
  "prettier": {
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ],
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 120,
    "endOfLine": "auto",
    "arrowParens": "always"
  }
}
